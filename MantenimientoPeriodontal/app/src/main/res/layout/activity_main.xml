<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="10dp"
            android:background="@color/titulos"
            android:text="Datos del paciente:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:background="@color/gris"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:" />

                <EditText
                    android:id="@+id/idpaciente"
                    android:layout_width="68dp"
                    android:layout_height="48dp"
                    android:hint="*"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gris"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre y Apellidos:" />

                <EditText
                    android:id="@+id/nombreapellido"
                    android:layout_width="68dp"
                    android:layout_height="48dp"
                    android:hint="*"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gris"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha:" />

                <EditText
                    android:id="@+id/fecha"
                    android:layout_width="68dp"
                    android:layout_height="48dp"
                    android:hint="*"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gris"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edad:" />

                <EditText
                    android:id="@+id/edad"
                    android:layout_width="68dp"
                    android:layout_height="48dp"
                    android:hint="*"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gris"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nº Dientes:" />

                <EditText
                    android:id="@+id/numdientes"
                    android:layout_width="88dp"
                    android:layout_height="48dp"
                    android:hint="*"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="10dp"
                android:background="@color/titulos"
                android:text="Condicionantes de Riesgo:"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="@color/gris"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sangrado:" />

            <EditText
                android:id="@+id/sangrado"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:hint="*"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvColorSangrado"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginLeft="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="@color/gris"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ausencia de Dientes:" />

            <EditText
                android:id="@+id/ausdientes"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:hint="*"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvColorAusDiente"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="@color/gris"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pérdida de Dientes: " />

            <EditText
                android:id="@+id/perdidadientes"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:hint="*"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvColorPerdDiente"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginLeft="26dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="@color/gris"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes: " />

            <EditText
                android:id="@+id/diabetes"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:hint="*"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvColorDiabetes"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginLeft="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="@color/gris"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tabaco:" />

            <EditText
                android:id="@+id/tabaco"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:hint="*"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvColorTabaco"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginLeft="105dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="@color/gris"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profundidad de bolsa: " />

            <EditText
                android:id="@+id/profbolsa"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:hint="*"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvColorProfBolsa"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/gris">

            <Button
                android:id="@+id/Calcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calcular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="30dp"
                android:background="@color/titulos"
                android:text="TOTAL: "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/titulos"
                android:hint="*"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>